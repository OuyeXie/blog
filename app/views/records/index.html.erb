<%# app/views/records/index.html.erb %>


<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @records.each do |record| %>
      <tr>
        <td><%= record.title %></td>
        <td><%= record.amount %></td>
      </tr>
  <% end %>
</table>

<%= react_component 'Records', { data: @records } %>

<%= react_component 'Records2', { records: @records } %>